FROM node:20-alpine

WORKDIR /backend

COPY backend/package.json backend/package-lock.json ./
RUN npm ci 

COPY backend .

ARG DATABASE_URL
ENV DATABASE_URL=$DATABASE_URL

RUN npx prisma generate
RUN npx prisma migrate deploy
RUN npm run build

ENV NODE_ENV=production
EXPOSE 8080

CMD ["node", "dist/main.js"]
