if git diff --cached --name-only | grep '^backend/'; then
  echo "🔍 Verificando backend..."
  cd backend
  npm run lint-staged
  npm run lint
  npm run test
fi

if git diff --cached --name-only | grep '^frontend/'; then
  echo "🔍 Verificando frontend..."
  cd frontend
  npm run lint-staged
  npm run lint
  npm run test
fi